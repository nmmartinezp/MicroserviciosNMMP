<%- include('layout', { body: null }); %>
<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Fecha de Nacimiento</th>
      <th>Dirección</th>
      <th>Celular</th>
      <th>Correo</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if (data.length > 0) { %> <% data.forEach(item => { %>
    <tr>
      <td><%= item._id %></td>
      <td><%= item.nombres %></td>
      <td><%= item.apellidos %></td>
      <td>
        <%= item.fecha_nacimiento ?
        item.fecha_nacimiento.toISOString().split('T')[0] : '' %>
      </td>
      <td><%= item.direccion %></td>
      <td><%= item.celular %></td>
      <td><%= item.correo %></td>
      <td><a href="/actualizar/<%= item._id %>">Actualizar</a></td>
      <td>
        <form action="/delete/<%= item._id %>?_method=DELETE" method="POST">
          <button
            type="submit"
            onclick="return confirm('¿Estás seguro de eliminar este contacto?')"
          >
            Eliminar
          </button>
        </form>
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="7">No hay registros</td>
    </tr>
    <% } %>
  </tbody>
</table>
<a href="/crear">Agregar Nuevo Contacto</a>
