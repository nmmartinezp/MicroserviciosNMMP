<%- include('layout', { body: null }); %>
<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Fecha de creacion</th>
      <th>Estado</th>
    </tr>
  </thead>
  <tbody>
    <% if (data.length > 0) { %> <% data.forEach(item => { %>
    <tr>
      <td><%= item._id %></td>
      <td><%= item.titulo %></td>
      <td><%= item.descipcion %></td>
      <td>
        <%= item.fecha_creacion ?
        item.fecha_creacion.toISOString().split('T')[0] : '' %>
      </td>
      <td><%= item.estado %></td>
      <td><a href="/actualizar/<%= item._id %>">Actualizar</a></td>
      <td>
        <form action="/delete/<%= item._id %>?_method=DELETE" method="POST">
          <button
            type="submit"
            onclick="return confirm('¿Estás seguro de eliminar este contacto?')"
          >
            Eliminar
          </button>
        </form>
      </td>
    </tr>
    <% }) %> <% } else { %>
    <tr>
      <td colspan="7">No hay registros</td>
    </tr>
    <% } %>
  </tbody>
</table>
<a href="/crear">Agregar Nueva Tarea</a>
